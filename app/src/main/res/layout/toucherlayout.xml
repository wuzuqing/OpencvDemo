<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/grey_line"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="6dp"
    >

    <LinearLayout
        android:id="@+id/ll_panel"
        android:layout_width="wrap_content"
        android:visibility="visible"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/tvTest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:padding="4dp"
                android:text="主号"
                android:textColor="@color/red_busy"
                />

            <TextView
                android:id="@+id/tvStartSome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:text="开始挂机"
                android:textColor="@color/red_busy"
                />
            <TextView
                android:id="@+id/tvStartOne"
                android:layout_width="wrap_content"
                android:visibility="visible"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="收菜"
                android:textColor="@color/red_busy"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/tvSetting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="4dp"
                android:padding="4dp"
                android:text="参数"
                android:textColor="@color/red_busy"
                />

            <TextView
                android:id="@+id/tvTestSetting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:padding="4dp"
                android:text="位置"
                android:textColor="@color/red_busy"
                />

            <TextView
                android:id="@+id/tvOneTask"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:padding="4dp"
                android:text="当前任务"
                android:textColor="@color/red_busy"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/tvClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="关卡"
                android:textColor="@color/red_busy"
                />

            <TextView
                android:id="@+id/tvUpgrade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:padding="4dp"
                android:text="升级"
                android:textColor="@color/red_busy"
                />

            <TextView
                android:id="@+id/tvLaunch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:padding="4dp"
                android:text="启动游戏"
                android:textColor="@color/red_busy"
                />

        </LinearLayout>

    </LinearLayout>
    <TextView
        android:id="@+id/tv_limit_time"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:textColor="@color/red_busy"
        android:text="体验倒计时"

        />
    <TextView
        android:id="@+id/tv_show_or_hide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:textColor="@color/red_busy"
        android:textSize="16sp"
        android:text="隐藏"
        />
</LinearLayout>
